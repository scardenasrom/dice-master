<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roll_dialog_root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/red_dark"
    android:padding="@dimen/xsmall_spacing"
    >

    <TextView
        android:id="@+id/roll_dialog_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_spacing"
        android:textColor="@color/white"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"
        tools:text="d20 + 8"
        />

    <TextView
        android:id="@+id/roll_dialog_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="@dimen/medium_spacing"
        android:paddingLeft="@dimen/xlarge_spacing"
        android:paddingRight="@dimen/xlarge_spacing"
        android:paddingTop="@dimen/medium_spacing"
        android:textColor="@color/white"
        android:textSize="@dimen/text_xxxlarge"
        android:textStyle="bold"
        tools:text="46"
        />

    <TextView
        android:id="@+id/roll_dialog_roll_results_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        tools:text="[14, 2, 13] [9, 23]"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/roll_dialog_roll_again_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/roll_dialog_roll_again_button"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/roll_dialog_close_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/roll_dialog_close_dialog"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            />

    </LinearLayout>

</LinearLayout>