<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_critics_and_fumbles"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/critics_and_fumbles_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/critical_card_margin"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/critical_card_radius"
        app:cardElevation="@dimen/critical_card_elevation"
        tools:visibility="visible"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/critics_and_fumbles_card_top_row"
                android:layout_width="match_parent"
                android:layout_height="@dimen/critical_card_double_raidus"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/critical_card_radius"
                android:paddingLeft="@dimen/critical_card_radius"
                android:paddingRight="@dimen/critical_card_radius"
                >

                <TextView
                    android:id="@+id/critics_and_fumbles_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/text_size_critical_card_title"
                    fontPath="fonts/indieflower.ttf"
                    />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/critics_and_fumbles_card_top_button"
                android:layout_width="@dimen/critical_card_double_raidus"
                android:layout_height="@dimen/critical_card_double_raidus"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerInside"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <FrameLayout
                android:id="@+id/critics_and_fumbles_critics_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                tools:visibility="visible"
                >

                <com.ogaclejapan.arclayout.ArcLayout
                    android:id="@+id/critics_and_fumbles_critics_arc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="48dp"
                    app:arc_axisRadius="100dp"
                    app:arc_freeAngle="true"
                    app:arc_origin="bottom"
                    app:arc_radius="140dp"
                    >

                    <ImageButton
                        android:id="@+id/critics_and_fumbles_sword_crit"
                        android:layout_width="@dimen/toolbar_button_size"
                        android:layout_height="@dimen/toolbar_button_size"
                        android:background="@drawable/button_arc"
                        android:src="@drawable/ic_sword"
                        app:arc_angle="30"
                        />

                    <ImageButton
                        android:id="@+id/critics_and_fumbles_hammer_crit"
                        android:layout_width="@dimen/toolbar_button_size"
                        android:layout_height="@dimen/toolbar_button_size"
                        android:background="@drawable/button_arc"
                        android:src="@drawable/ic_hammer"
                        app:arc_angle="70"
                        />

                    <ImageButton
                        android:id="@+id/critics_and_fumbles_arrow_crit"
                        android:layout_width="@dimen/toolbar_button_size"
                        android:layout_height="@dimen/toolbar_button_size"
                        android:background="@drawable/button_arc"
                        android:src="@drawable/ic_arrow"
                        app:arc_angle="110"
                        />

                    <ImageButton
                        android:id="@+id/critics_and_fumbles_magic_crit"
                        android:layout_width="@dimen/toolbar_button_size"
                        android:layout_height="@dimen/toolbar_button_size"
                        android:background="@drawable/button_arc"
                        android:src="@drawable/ic_magic"
                        app:arc_angle="150"
                        />

                </com.ogaclejapan.arclayout.ArcLayout>

            </FrameLayout>

            <Button
                android:id="@+id/critics_and_fumbles_critic"
                android:layout_width="@dimen/critical_fumble_button_size"
                android:layout_height="@dimen/critical_fumble_button_size"
                android:background="@drawable/button_arc"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_content_margin"
                android:text="@string/critics_and_fumbles_critical"
                android:textColor="@color/color_text_primary"
                android:textSize="@dimen/text_size_smaller_title"
                fontPath="fonts/merriweather.ttf"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <FrameLayout
                android:id="@+id/critics_and_fumbles_fumbles_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                tools:visibility="visible"
                >

                <com.ogaclejapan.arclayout.ArcLayout
                    android:id="@+id/critics_and_fumbles_fumbles_arc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="48dp"
                    app:arc_axisRadius="100dp"
                    app:arc_freeAngle="true"
                    app:arc_origin="top"
                    app:arc_radius="140dp"
                    >

                    <ImageButton
                        android:id="@+id/critics_and_fumbles_sword_fumble"
                        android:layout_width="@dimen/toolbar_button_size"
                        android:layout_height="@dimen/toolbar_button_size"
                        android:background="@drawable/button_arc_alt"
                        android:src="@drawable/ic_sword"
                        app:arc_angle="30"
                        />

                    <ImageButton
                        android:id="@+id/critics_and_fumbles_hammer_fumble"
                        android:layout_width="@dimen/toolbar_button_size"
                        android:layout_height="@dimen/toolbar_button_size"
                        android:background="@drawable/button_arc_alt"
                        android:src="@drawable/ic_hammer"
                        app:arc_angle="70"
                        />

                    <ImageButton
                        android:id="@+id/critics_and_fumbles_arrow_fumble"
                        android:layout_width="@dimen/toolbar_button_size"
                        android:layout_height="@dimen/toolbar_button_size"
                        android:background="@drawable/button_arc_alt"
                        android:src="@drawable/ic_arrow"
                        app:arc_angle="110"
                        />

                    <ImageButton
                        android:id="@+id/critics_and_fumbles_magic_fumble"
                        android:layout_width="@dimen/toolbar_button_size"
                        android:layout_height="@dimen/toolbar_button_size"
                        android:background="@drawable/button_arc_alt"
                        android:src="@drawable/ic_magic"
                        app:arc_angle="150"
                        />

                </com.ogaclejapan.arclayout.ArcLayout>

            </FrameLayout>

            <Button
                android:id="@+id/critics_and_fumbles_fumble"
                android:layout_width="@dimen/critical_fumble_button_size"
                android:layout_height="@dimen/critical_fumble_button_size"
                android:background="@drawable/button_arc_alt"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_content_margin"
                android:text="@string/critics_and_fumbles_fumble"
                android:textColor="@color/color_text_primary"
                android:textSize="@dimen/text_size_smaller_title"
                fontPath="fonts/merriweather.ttf"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>