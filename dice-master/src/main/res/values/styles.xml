<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="normal_button">
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/text_size_toolbar_title</item>
        <item name="fontPath">fonts/indieflower.ttf</item>
    </style>

    <style name="main_toolbar_title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/text_size_main_toolbar_title</item>
        <item name="fontPath">fonts/FrederickaTheGreat.ttf</item>
    </style>

    <style name="toolbar_title">
        <item name="android:gravity">bottom</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/text_size_toolbar_title</item>
        <item name="fontPath">fonts/FrederickaTheGreat.ttf</item>
    </style>

    <style name="about_card_title">
        <item name="android:textColor">@color/color_text_card_view</item>
        <item name="android:textSize">@dimen/text_size_toolbar_title</item>
        <item name="fontPath">fonts/dosis.ttf</item>
    </style>

    <style name="about_card_text">
        <item name="android:textColor">@color/color_text_card_view</item>
        <item name="android:textSize">@dimen/text_size_card_text</item>
        <item name="fontPath">fonts/slabo.ttf</item>
    </style>

</resources>
