<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="normal_button">
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/text_size_smaller_title</item>
        <item name="fontPath">fonts/indieflower.ttf</item>
    </style>

    <style name="one_vs_one_player_button">
        <item name="android:background">@drawable/round_card_button</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/text_size_large_characters</item>
        <item name="fontPath">fonts/ArchitectsDaughter.ttf</item>
    </style>

    <style name="single_throw_dice_button">
        <item name="android:background">@drawable/arc_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:textSize">@dimen/text_size_critical_card_title</item>
        <item name="fontPath">fonts/GloriaHallelujah.ttf</item>
    </style>

</resources>