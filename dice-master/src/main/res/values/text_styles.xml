<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_toolbar_title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/text_size_greater_title</item>
        <item name="fontPath">fonts/FrederickaTheGreat.ttf</item>
    </style>

    <style name="toolbar_title">
        <item name="android:gravity">bottom</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">@dimen/text_size_smaller_title</item>
        <item name="fontPath">fonts/FrederickaTheGreat.ttf</item>
    </style>

    <style name="about_card_title">
        <item name="android:textColor">@color/color_text_card_view</item>
        <item name="android:textSize">@dimen/text_size_smaller_title</item>
        <item name="fontPath">fonts/dosis.ttf</item>
    </style>

    <style name="about_card_text">
        <item name="android:textColor">@color/color_text_card_view</item>
        <item name="android:textSize">@dimen/text_size_card_text</item>
        <item name="fontPath">fonts/slabo.ttf</item>
    </style>

    <style name="one_vs_one_player_name">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/text_size_greater_title</item>
        <item name="fontPath">fonts/ArchitectsDaughter.ttf</item>
    </style>

    <style name="one_vs_one_score">
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:maxLength">6</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/text_size_large_characters</item>
        <item name="fontPath">fonts/indieflower.ttf</item>
    </style>

</resources>